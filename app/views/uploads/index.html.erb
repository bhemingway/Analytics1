<table border="0" align="center" width="90%"> <!-- main table -->
  <tr>
    <td width="200">
      <img src="http://enrs.trustthevote.org/assets/ttv_grey_poweredby-85bb80e31c6153295ddec9023a74450c.jpg" 
        alt="powered by Trust The Vote" width="175" height="175">
    </td>
    <td valign="top">
      <h1><%= AppConfig.site_name %></h1>
      <h2><%=t('landing_page.upload_data')%></h2>
      <p><%=t('upload_page.text')%></p>

      <h3><%= t('upload_page.upload_header') %></h3>
      <p>
      <%= form_tag('/uploads', multipart: true) do %>
	<p>
	<label for="upload_file"><%= t('upload_page.prompt')%></label>: 
	<%= file_field 'upload', 'datafile' %>
	<%= submit_tag t('upload_page.button_text') %>
	</p>
      <% end %>
      </p>
      <h3><%= t('upload_page.datafiles_header') %></h3>
      <p>
      <%= raw listFiles %>
      </p>
    </td>
  </tr>
  <tr>
    <td>&nbsp;</td>
    <td colspan="1">
      <hr align="left" width="500">
      <br>
      [<a href="/"><%= t('footer.home_link_text')%></a>]
      <cite>
Page rendered 
<%= 
  endtime = Time.new;
  sprintf("%02d/%02d/%04d at %02d:%02d:%02d",endtime.month,endtime.day,endtime.year,endtime.hour,endtime.min,endtime.sec)
%>
      </cite>
    </td>
  </tr>
</table>
