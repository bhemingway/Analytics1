<h1>Listing reports</h1>

<table border=0 cellspacing="3" cellpadding="3" style="border-width:1px;border-color:black;border-style:solid;">
  <tr>
    <th>Report</th>
    <th>Period</th>
    <th>Created</th>
    <th>Last Run</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reports.each do |report| %>
  <tr>
<!--    <td><%= report.report %></td> -->
    <td>
      <%= Report::R2string[report.report] %>
    </td>
    <td><%= report.period %></td>
    <td><%= report.created_at %></td>
    <td><%= report.updated_at %></td>
    <td><%= submit_tag t('reports_page.make_button_text') %></td>
    <td><%= link_to 'View', '' %></td>
    <td><%= link_to 'Show', report %></td>
    <td><%= link_to 'Edit', edit_report_path(report) %></td>
    <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

